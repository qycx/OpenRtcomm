<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/Layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/txt_title"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:gravity="center"
        android:text="qyMessenger"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

        
        <android.support.constraint.Guideline
        android:id="@+id/guide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.1"/>



    <TextView
        android:id="@+id/staticUsrName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name:"
        android:textSize="18sp"
        app:layout_constraintLeft_toRightOf="@id/guide"
        app:layout_constraintTop_toBottomOf="@id/txt_title" />
    <TextView
        android:id="@+id/dwmc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="company"
        android:textSize="18sp"
        android:layout_marginLeft="20dp"
        app:layout_constraintLeft_toRightOf="@+id/guide"
        app:layout_constraintTop_toBottomOf="@+id/staticUsrName" />

    <TextView
        android:id="@+id/usrName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="zhangsan"
        android:textSize="18sp"
        android:layout_marginLeft="20dp"
        app:layout_constraintLeft_toRightOf="@+id/guide"
        app:layout_constraintTop_toBottomOf="@+id/dwmc" />

    <TextView
        android:id="@+id/staticIdInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ID:"
        android:textSize="18sp"
        app:layout_constraintLeft_toRightOf="@id/guide"
        app:layout_constraintTop_toBottomOf="@+id/usrName" />
    <TextView
        android:id="@+id/idInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="123"
        android:textSize="18sp"
        android:layout_marginLeft="20dp"
        app:layout_constraintLeft_toRightOf="@+id/guide"
        app:layout_constraintTop_toBottomOf="@+id/staticIdInfo" />

    <TextView
        android:id="@+id/staticIo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="IO:"
        android:textSize="18sp"
        app:layout_constraintLeft_toRightOf="@id/guide"
        app:layout_constraintTop_toBottomOf="@+id/idInfo" />
    <TextView
        android:id="@+id/io"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1,1"
        android:textSize="18sp"
        android:layout_marginLeft="20dp"
        app:layout_constraintLeft_toRightOf="@+id/guide"
        app:layout_constraintTop_toBottomOf="@+id/staticIo" />

    <TextView
        android:id="@+id/staticServer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Server:"
        android:textSize="18sp"
        app:layout_constraintLeft_toRightOf="@id/guide"
        app:layout_constraintTop_toBottomOf="@+id/io" />

    <TextView
        android:id="@+id/server"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="127.0.0.1:8768"
        android:textSize="18sp"
        android:layout_marginLeft="20dp"
        app:layout_constraintLeft_toRightOf="@id/guide"
        app:layout_constraintTop_toBottomOf="@+id/staticServer" />

    <TextView
        android:id="@+id/staticStatusServer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="StatusServer:"
        android:textSize="18sp"
        app:layout_constraintLeft_toRightOf="@id/guide"
        app:layout_constraintTop_toBottomOf="@+id/server" />


    <EditText
        android:id="@+id/edt_statusServer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint=""
        android:inputType="textPersonName"
        android:layout_marginLeft="20dp"
        android:ems="10"
        app:layout_constraintLeft_toRightOf="@id/guide"
        app:layout_constraintTop_toBottomOf="@+id/staticStatusServer"
        />
    <TextView
        android:id="@+id/statusQInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="StatusQInfo"
        android:textSize="18sp"
        android:layout_marginLeft="20dp"
        app:layout_constraintLeft_toRightOf="@id/guide"
        app:layout_constraintTop_toBottomOf="@id/edt_statusServer" />


        <Button
        android:id="@+id/btn_apply"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Apply"
        android:layout_marginTop="50dp"
        android:layout_marginRight="30dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/statusQInfo"
        tools:layout_editor_absoluteX="84dp" />

<TextView
        android:id="@+id/staticVer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toRightOf="@+id/guide"
        app:layout_constraintTop_toBottomOf="@id/btn_apply"
        android:text="Ver:"
        android:textSize="18sp"
        />
    <TextView
        android:id="@+id/ver"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        app:layout_constraintLeft_toRightOf="@id/guide"
        app:layout_constraintTop_toBottomOf="@id/staticVer"
        android:text="1.1"
        android:textSize="18sp"
        />
<TextView
        android:id="@+id/staticSupport"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toRightOf="@+id/guide"
        app:layout_constraintTop_toBottomOf="@id/ver"
        android:text="Support:"
        android:textSize="18sp"
        />
    <TextView
        android:id="@+id/support"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        app:layout_constraintLeft_toRightOf="@id/guide"
        app:layout_constraintTop_toBottomOf="@+id/staticSupport"
        android:text="www.qycx.com"
        android:textSize="18sp"
        />



</androidx.constraintlayout.widget.ConstraintLayout>


